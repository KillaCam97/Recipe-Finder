<%- include("partials/header.ejs") %>
<div class="container">
  <h1>Recipe Finder</h1>
  <form action="/" method="GET" class="search-form">
    <label for="ingredient">Main Ingredient:</label>
    <input type="text" id="ingredient" name="ingredient" required />
    <button type="submit">Search</button>
  </form>
  <div class="search-results">
    <% if (recipes && recipes.length > 0) { %>
    <h2>Search Results:</h2>
    <ul>
      <% recipes.forEach(recipe => { %>
      <!-- Make each result clickable -->
      <li><a href="/meals/<%= recipe.idMeal %>"><%= recipe.strMeal %></a></li>
      <% }); %>
    </ul>
    <% } else { %>
    <p>No recipes found for the provided ingredient.</p>
    <% } %>
  </div>
</div>
<%- include("partials/footer.ejs") %>
